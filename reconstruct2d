function M=reconstruct(approx_grad)
     A=[-2, 2, 2, 2, -4; -1, 2, 0.5, 2, -2; 0, 2, 0, 2, 0; 1, 2, 0.5, 2, 2; 2, 2, 2, 2, 4; -2, 1, 2, 0.5, -2; -1, 1, 0.5, 0.5, -1; 0, 1, 0, 0.5, 0; 1, 1, 0.5, 0.5, 1; 2, 1, 2, 0.5, 2; -2, 0, 2, 0, 0; -1, 0 , 0.5, 0, 0; 1, 0, 0.5, 0, 0; 2, 0, 2, 0, 0; -2, -1, 2, 0.5, 2; -1, -1, 0.5, 0.5, 1; 0, -1, 0, 0.5, 0; 1, -1, 0.5, 0.5, -1; 2, -1, 2, 0.5, -2; -2, -2, 2, 2, 4; -1, -2, 0.5, 2, 2; 0, -2, 0, 2, 0; 1, -2, 0.5, 2, -2; 2, -2, 0.5, 2, -2];
    C = (inv(A' * A) * A')';

    M = C * approx_grad;
    disp(M)
end
